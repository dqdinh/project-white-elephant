html
  font-family 'Source Sans Pro', sans-serif
  background-color $bg-color-trans20

h1,
h2,
h3,
h4,
h5
  color $white
  font-weight 100

.content-wrapper,
.ribbon
  top 100%
  background-color $bg-color-trans20

.splash-container
  background-image url(images/landing-bg-mobile.jpg)
  background-position center
  background-attachment fixed
  background-repeat no-repeat
  background-size cover
  background-color $bg-color-trans20
  height 100%
  @media screen and (min-width: 48em)
    background-image url(images/landing-bg-desktop.jpg)

.footer
  background-color $bg-color-trans20

.splash-head
  margin-top 10em
  @media screen and (min-width: 48em)
    margin-top 2em

.home-menu.pure-menu-open
  font-size 1.25em
  background-color $bg-color-trans20
  box-shadow 0 2px 5px rgba(0,0,0,0.26)
  a
    color $white
    &:focus
      color $gray

.u-pushup
  margin -1em
  a
    color $white
